        .stat-icon.success { background: linear-gradient(135deg, #2dce89, #2dcecc); }
        .stat-icon.info { background: linear-gradient(135deg, #11cdef, #1171ef); }
        .stat-icon.warning { background: linear-gradient(135deg, #fb6340, #fbb140); }
        
        .stat-label {
