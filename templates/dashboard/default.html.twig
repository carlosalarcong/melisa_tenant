            align-items: center;
            padding: 0.75rem 1rem;
            margin: 0.2rem 0;
            color: #495057;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            text-decoration: none;
            position: relative;
        }
        
        .sidebar .nav-link:hover {
            background-color: rgba(94, 114, 228, 0.1);
            color: #5e72e4;
            transform: translateX(3px);
        }
        
        .sidebar .nav-link.active {
