{% extends 'base.html.twig' %}

{% block title %}Dashboard - {{ tenant.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header del Dashboard -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_dashboard') }}">
                <i class="fas fa-hospital-alt me-2"></i>
                {{ tenant.name }}
            </a>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user me-1"></i>
                        {{ member.name|default(member.username) }}
                        <span class="badge bg-secondary ms-1">{{ member.role|default('Usuario') }}</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Mi Perfil</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Configuración</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Estadísticas del Dashboard -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Pacientes</h4>
                            <h2>142</h2>
                            <small>Total registrados</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Citas Hoy</h4>
                            <h2>18</h2>
                            <small>Programadas</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-check fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Pendientes</h4>
                            <h2>5</h2>
                            <small>Por revisar</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Ingresos</h4>
                            <h2>$847K</h2>
                            <small>Este mes</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="row">
        <!-- Panel de Navegación Rápida -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Acceso Rápido
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>Nuevo Paciente
                        </a>
                        <a href="#" class="btn btn-outline-success">
                            <i class="fas fa-calendar-plus me-2"></i>Nueva Cita
                        </a>
                        <a href="#" class="btn btn-outline-info">
                            <i class="fas fa-file-medical me-2"></i>Historia Clínica
                        </a>
                        <a href="#" class="btn btn-outline-warning">
                            <i class="fas fa-pills me-2"></i>Recetas
                        </a>
                        <a href="#" class="btn btn-outline-danger">
                            <i class="fas fa-chart-line me-2"></i>Reportes
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Citas de Hoy -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-day me-2"></i>
                        Citas de Hoy - {{ "now"|date("d/m/Y") }}
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Hora</th>
                                    <th>Paciente</th>
                                    <th>Motivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>09:00</strong></td>
                                    <td>María González</td>
                                    <td>Control general</td>
                                    <td><span class="badge bg-success">Confirmado</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Ver</button>
                                        <button class="btn btn-sm btn-outline-success">Atender</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>10:30</strong></td>
                                    <td>Carlos Ruiz</td>
                                    <td>Consulta cardiología</td>
                                    <td><span class="badge bg-warning">Pendiente</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Ver</button>
                                        <button class="btn btn-sm btn-outline-success">Atender</button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>11:15</strong></td>
                                    <td>Ana Morales</td>
                                    <td>Seguimiento</td>
                                    <td><span class="badge bg-info">En sala</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary">Ver</button>
                                        <button class="btn btn-sm btn-outline-success">Atender</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Información del Sistema -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Información del Sistema
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-building me-2"></i>Centro Médico:</h6>
                            <p class="text-muted mb-3">{{ tenant.name }}</p>
                            
                            <h6><i class="fas fa-globe me-2"></i>Subdominio:</h6>
                            <p class="text-muted mb-3">{{ tenant.subdomain }}.melisaupgrade.prod</p>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-user me-2"></i>Usuario Activo:</h6>
                            <p class="text-muted mb-3">{{ member.username }} ({{ member.role|default('Usuario') }})</p>
                            
                            <h6><i class="fas fa-clock me-2"></i>Última Conexión:</h6>
                            <p class="text-muted mb-3">{{ "now"|date("d/m/Y H:i") }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts adicionales -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Actualizar la hora cada minuto
    setInterval(function() {
        const now = new Date();
        const timeElements = document.querySelectorAll('.current-time');
        timeElements.forEach(el => {
            el.textContent = now.toLocaleTimeString('es-CL');
        });
    }, 60000);
    
    console.log('Dashboard cargado para:', '{{ tenant.name }}');
    console.log('Usuario:', '{{ member.username }}');
});
</script>
{% endblock %}