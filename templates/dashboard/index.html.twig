                            <div class="module-icon" style="background: {{ module.gradient }}">
                                <i class="fas {{ module.icon }}"></i>
                            </div>
                            <h5 class="module-name">{{ module.name }}</h5>
                            <p class="module-description">{{ module.description }}</p>
                            {% if module.featured %}
