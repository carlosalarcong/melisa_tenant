                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-bolt me-2 text-warning"></i>
                        Acciones RÃ¡pidas
                    </h5>
                    <div class="d-grid gap-2">
                        <button class="action-btn">
                            <div class="action-icon" style="background: var(--gradient-success)">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div>
                                <div class="fw-bold">Nuevo Paciente</div>
                                <small class="text-muted">Registrar paciente</small>
                            </div>
                        </button>
                        <button class="action-btn">
                            <div class="action-icon" style="background: var(--gradient-info)">
                                <i class="fas fa-calendar-plus"></i>
                            </div>
                            <div>
                                <div class="fw-bold">Agendar Cita</div>
                                <small class="text-muted">Nueva reserva</small>
                            </div>
                        </button>
                        <button class="action-btn">
                            <div class="action-icon" style="background: var(--gradient-warning)">
                                <i class="fas fa-search"></i>
                            </div>
                            <div>
                                <div class="fw-bold">Buscar Paciente</div>
                                <small class="text-muted">Por nombre o RUT</small>
                            </div>
                        </button>
                    </div>
                </div>

                {# Actividad Reciente #}
                <div class="quick-actions">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-history me-2 text-info"></i>
                        Actividad Reciente
                    </h5>
                    <div class="position-relative">
                        {% for activity in metrics.activity %}
                            <div class="activity-item">
                                <div class="activity-icon bg-{{ activity.color }}">
                                    <i class="fas {{ activity.icon }} text-white"></i>
                                </div>
                                <div class="activity-message">{{ activity.message }}</div>
                                <div class="activity-time">{{ activity.time }}</div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="text-center mt-3">
                        <a href="/activity-log" class="btn btn-sm btn-outline-secondary">
                            Ver todo el historial
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

