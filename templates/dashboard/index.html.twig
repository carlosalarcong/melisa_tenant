        </div>

        {# Alertas del Sistema #}
        {% if metrics.alerts %}
            {% for alert in metrics.alerts %}
                <div class="alert alert-{{ alert.type }} alert-modern animate-in mb-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas {{ alert.icon }} fa-2x"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="alert-heading mb-1">{{ alert.title }}</h5>
                            <p class="mb-0">{{ alert.message }}</p>
                        </div>
                        {% if alert.action_text %}
                            <a href="{{ alert.action_url }}" class="btn btn-sm btn-{{ alert.type }}">
                                {{ alert.action_text }}
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {# Contenido Principal #}
        <div class="row g-4">
            {# Columna Principal - MÃ³dulos #}
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="fw-bold">
                        <i class="fas fa-th-large me-2 text-primary"></i>
                        MÃ³dulos del Sistema
                    </h3>
                    <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="moduleFilter" id="filterAll" checked>
                        <label class="btn btn-outline-primary" for="filterAll">Todos</label>
                        
                        <input type="radio" class="btn-check" name="moduleFilter" id="filterFeatured">
                        <label class="btn btn-outline-primary" for="filterFeatured">Destacados</label>
                        
