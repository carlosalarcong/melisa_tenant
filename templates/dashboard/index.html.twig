        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Funcionalidad bÃ¡sica del dashboard
        document.addEventListener('DOMContentLoaded', function() {
            // Filtrado de mÃ³dulos
            const filterButtons = document.querySelectorAll('input[name="moduleFilter"]');
            const moduleCards = document.querySelectorAll('.module-card');
            
            filterButtons.forEach(button => {
                button.addEventListener('change', function() {
                    const filter = this.id.replace('filter', '').toLowerCase();
                    
                    moduleCards.forEach(card => {
                        if (filter === 'all') {
                            card.style.display = 'block';
                        } else if (filter === 'featured') {
                            card.style.display = card.dataset.featured === 'true' ? 'block' : 'none';
                        }
                    });
                });
            });

            // BÃºsqueda global con Ctrl/Cmd + K
            document.addEventListener('keydown', function(e) {
                if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                    e.preventDefault();
                    const searchModal = new bootstrap.Modal(document.getElementById('searchModal'));
                    searchModal.show();
                }
            });
        });
    </script>
{% endblock %}
