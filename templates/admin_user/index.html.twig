{% extends 'admin_layout.html.twig' %}

{% block title %}Administración de Usuarios{% endblock %}

{% block page_css %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css">
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Usuarios del Sistema</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard_default') }}">Dashboard</a></li>
                        <li class="breadcrumb-item active">Usuarios</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- License Info Cards -->
    <div class="row mb-3">
        <div class="col-xl-4 col-md-4">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <p class="text-uppercase fw-medium text-muted mb-0">Licencias Totales</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-2">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-2">
                                <span class="counter-value" data-target="{{ licenseInfo.total }}">{{ licenseInfo.total }}</span>
                            </h4>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-soft-primary rounded fs-3">
                                <i class="bx bx-user-check text-primary"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-4">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <p class="text-uppercase fw-medium text-muted mb-0">Licencias Usadas</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-2">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-2">
                                <span class="counter-value" data-target="{{ licenseInfo.used }}">{{ licenseInfo.used }}</span>
                            </h4>
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title bg-soft-info rounded fs-3">
                                <i class="bx bx-user text-info"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-4">
            <div class="card card-animate">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <p class="text-uppercase fw-medium text-muted mb-0">Licencias Disponibles</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-end justify-content-between mt-2">
                        <div>
                            <h4 class="fs-22 fw-semibold ff-secondary mb-2 {% if licenseInfo.available <= 5 %}text-danger{% else %}text-success{% endif %}">
                                <span class="counter-value" data-target="{{ licenseInfo.available }}">{{ licenseInfo.available }}</span>
                            </h4>
                            {% if licenseInfo.available <= 5 %}
                                <small class="text-danger">¡Pocas licencias disponibles!</small>
                            {% endif %}
                        </div>
                        <div class="avatar-sm flex-shrink-0">
                            <span class="avatar-title {% if licenseInfo.available <= 5 %}bg-soft-danger{% else %}bg-soft-success{% endif %} rounded fs-3">
                                <i class="bx bx-user-plus {% if licenseInfo.available <= 5 %}text-danger{% else %}text-success{% endif %}"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header border-0">
                    <div class="d-flex align-items-center">
                        <h5 class="card-title mb-0 flex-grow-1">Listado de Usuarios</h5>
                        <div class="flex-shrink-0">
                            {% if licenseInfo.can_create_user %}
                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createUserModal">
                                    <i class="ri-add-line align-bottom me-1"></i> Nuevo Usuario
                                </button>
                            {% else %}
                                <button class="btn btn-secondary" disabled title="No hay licencias disponibles">
                                    <i class="ri-add-line align-bottom me-1"></i> Nuevo Usuario
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="card-body border border-dashed border-end-0 border-start-0">
                    <!-- Filters -->
                    <form method="get" action="{{ path('admin_user_index') }}">
                        <div class="row g-3">
                            <div class="col-xxl-3 col-sm-6">
                                <div class="search-box">
                                    <input type="text" name="search" class="form-control search" 
                                           placeholder="Buscar por nombre, email, username..." 
                                           value="{{ filters.search }}">
                                    <i class="ri-search-line search-icon"></i>
                                </div>
                            </div>

                            <div class="col-xxl-2 col-sm-6">
                                <select class="form-select" name="state">
                                    <option value="">Todos los estados</option>
                                    {% for state in states %}
                                        <option value="{{ state.id }}" {% if filters.state == state.id %}selected{% endif %}>
                                            {{ state.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-xxl-2 col-sm-6">
                                <select class="form-select" name="role">
                                    <option value="">Todos los roles</option>
                                    {% for role in roles %}
                                        <option value="{{ role.id }}" {% if filters.role == role.id %}selected{% endif %}>
                                            {{ role.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-xxl-2 col-sm-6">
                                <select class="form-select" name="userType">
                                    <option value="">Todos los tipos</option>
                                    <option value="PROFESSIONAL" {% if filters.userType == 'PROFESSIONAL' %}selected{% endif %}>Profesional</option>
                                    <option value="ADMINISTRATIVE" {% if filters.userType == 'ADMINISTRATIVE' %}selected{% endif %}>Administrativo</option>
                                </select>
                            </div>

                            <div class="col-xxl-3 col-sm-12">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="ri-equalizer-fill me-1 align-bottom"></i> Filtrar
                                </button>
                                <a href="{{ path('admin_user_index') }}" class="btn btn-soft-secondary w-100 mt-1">
                                    <i class="ri-close-line me-1 align-bottom"></i> Limpiar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table id="usersTable" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                            <thead>
                                <tr>
                                    <th>RUT</th>
                                    <th>Nombre Completo</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Rol</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for member in members %}
                                    <tr>
                                        <td>{{ member.person.identification }}</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0 me-2">
                                                    <div class="avatar-xs">
                                                        <div class="avatar-title bg-light text-primary rounded-circle fs-16">
                                                            {{ member.person.name|slice(0, 1)|upper }}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    {{ member.person.name }} {{ member.person.lastName }}
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ member.username }}</td>
                                        <td>{{ member.email }}</td>
                                        <td>
                                            <span class="badge badge-soft-info">
                                                {{ member.role.name }}
                                            </span>
                                        </td>
                                        <td>
                                            {% if member.userType == 'PROFESSIONAL' %}
                                                <span class="badge badge-soft-primary">Profesional</span>
                                            {% else %}
                                                <span class="badge badge-soft-secondary">Administrativo</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if member.state.isActive() %}
                                                <span class="badge badge-soft-success">
                                                    <i class="ri-checkbox-circle-line align-middle"></i> {{ member.state.name }}
                                                </span>
                                            {% elseif member.state.isBlocked() %}
                                                <span class="badge badge-soft-danger">
                                                    <i class="ri-close-circle-line align-middle"></i> {{ member.state.name }}
                                                </span>
                                            {% else %}
                                                <span class="badge badge-soft-warning">
                                                    <i class="ri-alert-line align-middle"></i> {{ member.state.name }}
                                                </span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-soft-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="ri-more-fill"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="{{ path('admin_user_view', {id: member.id}) }}">
                                                            <i class="ri-eye-fill align-bottom me-2 text-muted"></i> Ver
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="#" onclick="openEditModal({{ member.id }}); return false;">
                                                            <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Editar
                                                        </a>
                                                    </li>
                                                    {% if member.state.isActive() %}
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="#" 
                                                               onclick="confirmDelete({{ member.id }}, '{{ member.username }}'); return false;">
                                                                <i class="ri-delete-bin-fill align-bottom me-2"></i> Inactivar
                                                            </a>
                                                        </li>
                                                    {% elseif member.state.isInactive() %}
                                                        <li>
                                                            <a class="dropdown-item text-success" href="#"
                                                               onclick="confirmActivate({{ member.id }}, '{{ member.username }}'); return false;">
                                                                <i class="ri-checkbox-circle-fill align-bottom me-2"></i> Activar
                                                            </a>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="ri-user-add-line me-2"></i>Crear Nuevo Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                {% include 'admin_user/user_form.html.twig' with {
                    'form': createForm,
                    'is_edit': false,
                    'licenseInfo': licenseInfo,
                    'organization': organization
                } only %}
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="ri-pencil-line me-2"></i>Editar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center py-5" id="editModalLoader">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3 text-muted">Cargando formulario...</p>
                </div>
                <div id="editModalContent" style="display:none;"></div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Inactivación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="deleteForm" method="post">
                <div class="modal-body">
                    <div class="mt-2 text-center">
                        <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop"
                                   colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px">
                        </lord-icon>
                        <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                            <h4>¿Está seguro?</h4>
                            <p class="text-muted mx-4 mb-0">
                                ¿Desea inactivar al usuario <strong id="deleteUsername"></strong>?
                                <br>El usuario será desconectado inmediatamente.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                    <input type="hidden" name="_token" id="deleteToken">
                    <button type="submit" class="btn btn-danger">Sí, Inactivar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Activate Modal -->
<div class="modal fade" id="activateModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Activación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="activateForm" method="post">
                <div class="modal-body">
                    <div class="mt-2 text-center">
                        <lord-icon src="https://cdn.lordicon.com/lupuorrc.json" trigger="loop"
                                   colors="primary:#0ab39c,secondary:#405189" style="width:100px;height:100px">
                        </lord-icon>
                        <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                            <h4>¿Activar Usuario?</h4>
                            <p class="text-muted mx-4 mb-0">
                                ¿Desea activar al usuario <strong id="activateUsername"></strong>?
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                    <input type="hidden" name="_token" id="activateToken">
                    <button type="submit" class="btn btn-success">Sí, Activar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block page_js %}
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                order: [[1, 'asc']],
                pageLength: 25
            });
        });

        function confirmDelete(id, username) {
            $('#deleteUsername').text(username);
            $('#deleteForm').attr('action', '{{ path('admin_user_delete', {id: '__ID__'}) }}'.replace('__ID__', id));
            $('#deleteToken').val('{{ csrf_token('delete_user_') }}' + id);
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function confirmActivate(id, username) {
            $('#activateUsername').text(username);
            $('#activateForm').attr('action', '{{ path('admin_user_activate', {id: '__ID__'}) }}'.replace('__ID__', id));
            $('#activateToken').val('{{ csrf_token('activate_user_') }}' + id);
            new bootstrap.Modal(document.getElementById('activateModal')).show();
        }

        // Open edit modal and load form via AJAX
        function openEditModal(userId) {
            const modal = new bootstrap.Modal(document.getElementById('editUserModal'));
            modal.show();
            
            // Reset modal content
            $('#editModalLoader').show();
            $('#editModalContent').hide().html('');
            
            // Load form via AJAX
            $.ajax({
                url: '{{ path('admin_user_edit', {id: '__ID__'}) }}'.replace('__ID__', userId),
                type: 'GET',
                success: function(response) {
                    $('#editModalLoader').hide();
                    $('#editModalContent').html(response).show();
                    initializeEditForm();
                },
                error: function(xhr) {
                    $('#editModalLoader').hide();
                    let errorMsg = 'Error al cargar el formulario de edición.';
                    if (xhr.status === 404) {
                        errorMsg = 'Usuario no encontrado.';
                    }
                    $('#editModalContent').html(
                        '<div class="alert alert-danger"><i class="ri-error-warning-line me-2"></i>' + errorMsg + '</div>'
                    ).show();
                }
            });
        }

        // Reset edit modal on close
        $('#editUserModal').on('hidden.bs.modal', function () {
            $('#editModalLoader').show();
            $('#editModalContent').hide().html('');
        });

        function initializeEditForm() {
            // Form submit via AJAX
            const form = document.querySelector('#editUserModal form');
            if (form) {
                $(form).on('submit', function(e) {
                    e.preventDefault();
                    
                    if (!form.checkValidity()) {
                        form.classList.add('was-validated');
                        
                        // Show first tab with errors
                        const firstError = form.querySelector('.is-invalid');
                        if (firstError) {
                            const tabPane = firstError.closest('.tab-pane');
                            if (tabPane) {
                                const tabId = tabPane.getAttribute('id');
                                document.querySelector('[href="#' + tabId + '"]').click();
                            }
                        }
                        return false;
                    }

                    // Submit via AJAX
                    const formData = new FormData(form);
                    const submitBtn = $(form).find('button[type="submit"]');
                    const originalText = submitBtn.html();
                    
                    submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span> Guardando...');

                    $.ajax({
                        url: form.action,
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(response) {
                            if (response.success) {
                                $('#editUserModal').modal('hide');
                                showToast('success', response.message);
                                
                                setTimeout(() => {
                                    window.location.reload();
                                }, 1500);
                            }
                        },
                        error: function(xhr) {
                            const response = xhr.responseJSON;
                            showToast('error', response?.message || 'Error al actualizar el usuario');
                            submitBtn.prop('disabled', false).html(originalText);
                        }
                    });
                    
                    return false;
                });
            }
        }

        // Initialize create form when modal opens
        $('#createUserModal').on('shown.bs.modal', function () {
            initializeCreateForm();
        });

        // Reset form when modal closes
        $('#createUserModal').on('hidden.bs.modal', function () {
            const form = $(this).find('form')[0];
            if (form) {
                form.reset();
                form.classList.remove('was-validated');
                $('#password-strength').addClass('d-none');
            }
        });

        function initializeCreateForm() {
            // Password strength meter
            $('#password-field').on('keyup', function() {
                const password = $(this).val();
                if (password.length > 0) {
                    $('#password-strength').removeClass('d-none');
                    const strength = calculatePasswordStrength(password);
                    updateStrengthMeter(strength);
                } else {
                    $('#password-strength').addClass('d-none');
                }
            });

            // Form submit via AJAX
            const form = document.querySelector('#createUserModal form');
            if (form) {
                $(form).on('submit', function(e) {
                    e.preventDefault();
                    
                    if (!form.checkValidity()) {
                        form.classList.add('was-validated');
                        
                        // Show first tab with errors
                        const firstError = form.querySelector('.is-invalid');
                        if (firstError) {
                            const tabPane = firstError.closest('.tab-pane');
                            if (tabPane) {
                                const tabId = tabPane.getAttribute('id');
                                $('[href="#' + tabId + '"]').tab('show');
                            }
                        }
                        return false;
                    }

                    // Submit via AJAX
                    const formData = new FormData(form);
                    const submitBtn = $(form).find('button[type="submit"]');
                    const originalText = submitBtn.html();
                    
                    submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span> Guardando...');

                    $.ajax({
                        url: form.action,
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        success: function(response) {
                            if (response.success) {
                                $('#createUserModal').modal('hide');
                                
                                // Show success message with toast
                                showToast('success', response.message);
                                
                                // Reload page after short delay
                                setTimeout(() => {
                                    window.location.reload();
                                }, 1500);
                            }
                        },
                        error: function(xhr) {
                            const response = xhr.responseJSON;
                            showToast('error', response?.message || 'Error al crear el usuario');
                            submitBtn.prop('disabled', false).html(originalText);
                        }
                    });
                    
                    return false;
                });
            }
        }

        function calculatePasswordStrength(password) {
            let strength = 0;
            if (password.length >= 8) strength += 25;
            if (password.length >= 12) strength += 25;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength += 25;
            if (/\d/.test(password)) strength += 15;
            if (/[^a-zA-Z\d]/.test(password)) strength += 10;
            return Math.min(strength, 100);
        }

        function updateStrengthMeter(strength) {
            const bar = $('#password-strength-bar');
            const text = $('#password-strength-text');
            
            bar.css('width', strength + '%');
            bar.removeClass('bg-danger bg-warning bg-info bg-success');
            
            if (strength < 40) {
                bar.addClass('bg-danger');
                text.text('Débil').removeClass().addClass('text-danger fw-medium');
            } else if (strength < 60) {
                bar.addClass('bg-warning');
                text.text('Media').removeClass().addClass('text-warning fw-medium');
            } else if (strength < 80) {
                bar.addClass('bg-info');
                text.text('Buena').removeClass().addClass('text-info fw-medium');
            } else {
                bar.addClass('bg-success');
                text.text('Excelente').removeClass().addClass('text-success fw-medium');
            }
        }

        function showToast(type, message) {
            const bgClass = type === 'success' ? 'bg-success' : 'bg-danger';
            const icon = type === 'success' ? 'ri-checkbox-circle-line' : 'ri-error-warning-line';
            
            const toast = $(`
                <div class="position-fixed top-0 end-0 p-3" style="z-index: 11000;">
                    <div class="toast align-items-center text-white ${bgClass} border-0" role="alert">
                        <div class="d-flex">
                            <div class="toast-body">
                                <i class="${icon} me-2"></i>${message}
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                </div>
            `);
            
            $('body').append(toast);
            const toastEl = new bootstrap.Toast(toast.find('.toast')[0]);
            toastEl.show();
            
            setTimeout(() => {
                toast.remove();
            }, 5000);
        }
    </script>
