{% extends 'admin_layout.html.twig' %}

{% block title %}Ver Usuario - {{ member.person.name }} {{ member.person.lastName }}{% endblock %}

{% block page_css %}
    <style>
        .info-card {
            border-left: 4px solid #0ab39c;
        }
        .profile-badge {
            font-size: 12px;
            padding: 5px 10px;
            margin: 3px;
            display: inline-block;
        }
        .profile-excluded {
            background: #ffe0e0;
            color: #dc3545;
            border: 1px solid #dc3545;
        }
        .profile-direct {
            background: #e0f7ed;
            color: #0ab39c;
            border: 1px solid #0ab39c;
        }
        .profile-inherited {
            background: #e0f0ff;
            color: #299cdb;
            border: 1px solid #299cdb;
        }
        .password-warning {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Detalle del Usuario</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard_default') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Usuarios</a></li>
                        <li class="breadcrumb-item active">Ver</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-4">
            <!-- User Profile Card -->
            <div class="card">
                <div class="card-body text-center">
                    <div class="position-relative d-inline-block">
                        <img src="{{ asset('assets/images/users/user-dummy-img.jpg') }}" alt="" class="avatar-xl rounded-circle">
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-{{ member.state.description == 'ACTIVE' ? 'success' : 'danger' }}">
                            {{ member.state.description }}
                        </span>
                    </div>
                    <h5 class="mt-3 mb-1">{{ member.person.name }} {{ member.person.lastName }}</h5>
                    <p class="text-muted mb-3">{{ member.username }}</p>

                    <div class="mb-3">
                        <span class="badge badge-soft-primary me-1">
                            <i class="ri-shield-user-line me-1"></i>{{ member.role.name }}
                        </span>
                        <span class="badge badge-soft-info">
                            <i class="ri-user-line me-1"></i>{{ member.userType.value }}
                        </span>
                    </div>

                    <div class="hstack gap-2 justify-content-center">
                        <a href="{{ path('admin_user_edit', {'id': member.id}) }}" class="btn btn-primary btn-sm">
                            <i class="ri-edit-line me-1"></i> Editar
                        </a>
                        {% if member.state.description == 'ACTIVE' %}
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete({{ member.id }}, '{{ member.username }}')">
                                <i class="ri-delete-bin-line me-1"></i> Eliminar
                            </button>
                        {% else %}
                            <button type="button" class="btn btn-success btn-sm" onclick="confirmActivate({{ member.id }}, '{{ member.username }}')">
                                <i class="ri-check-line me-1"></i> Activar
                            </button>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-contacts-line me-1"></i> Información de Contacto
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-mail-line fs-16 text-muted"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Email</h6>
                                    <p class="text-muted mb-0">{{ member.person.email }}</p>
                                </div>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-phone-line fs-16 text-muted"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Teléfono</h6>
                                    <p class="text-muted mb-0">{{ member.person.phones ?? 'No registrado' }}</p>
                                </div>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-id-card-line fs-16 text-muted"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">RUT</h6>
                                    <p class="text-muted mb-0">{{ member.person.identification }}</p>
                                </div>
                            </div>
                        </li>
                        <li class="mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-cake-line fs-16 text-muted"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Fecha de Nacimiento</h6>
                                    <p class="text-muted mb-0">
                                        {% if member.person.birthDateAt %}
                                            {{ member.person.birthDateAt|date('d/m/Y') }}
                                        {% else %}
                                            No registrada
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-user-3-line fs-16 text-muted"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Género</h6>
                                    <p class="text-muted mb-0">{{ member.person.gender.name }}</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-8">
            <!-- Security Information -->
            <div class="card info-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-shield-keyhole-line me-1"></i> Información de Seguridad
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Contraseña</label>
                                {% if passwordExpired %}
                                    <div class="alert alert-danger mb-0 password-warning">
                                        <i class="ri-error-warning-line me-2"></i>
                                        <strong>¡Contraseña expirada!</strong>
                                        <p class="mb-0 small">El usuario debe cambiar su contraseña</p>
                                    </div>
                                {% elseif daysUntilExpiration is not null %}
                                    {% if daysUntilExpiration < 10 %}
                                        <div class="alert alert-warning mb-0">
                                            <i class="ri-alarm-warning-line me-2"></i>
                                            <strong>Expira en {{ daysUntilExpiration }} días</strong>
                                            <p class="mb-0 small">Recuerde cambiar su contraseña pronto</p>
                                        </div>
                                    {% elseif daysUntilExpiration < 30 %}
                                        <div class="alert alert-info mb-0">
                                            <i class="ri-information-line me-2"></i>
                                            <strong>Expira en {{ daysUntilExpiration }} días</strong>
                                        </div>
                                    {% else %}
                                        <div class="alert alert-success mb-0">
                                            <i class="ri-checkbox-circle-line me-2"></i>
                                            <strong>Válida ({{ daysUntilExpiration }} días)</strong>
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <div class="alert alert-secondary mb-0">
                                        <i class="ri-information-line me-2"></i>
                                        Sin información de expiración
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Intentos de Login Fallidos</label>
                                {% if member.loginAttempts >= 5 %}
                                    <div class="alert alert-danger mb-0">
                                        <i class="ri-lock-line me-2"></i>
                                        <strong>Cuenta bloqueada ({{ member.loginAttempts }} intentos)</strong>
                                        <p class="mb-0 small">
                                            <button type="button" class="btn btn-sm btn-danger mt-2" onclick="unlockUser({{ member.id }})">
                                                <i class="ri-lock-unlock-line me-1"></i> Desbloquear
                                            </button>
                                        </p>
                                    </div>
                                {% elseif member.loginAttempts > 0 %}
                                    <div class="alert alert-warning mb-0">
                                        <i class="ri-alert-line me-2"></i>
                                        {{ member.loginAttempts }} intentos fallidos
                                    </div>
                                {% else %}
                                    <div class="alert alert-success mb-0">
                                        <i class="ri-checkbox-circle-line me-2"></i>
                                        Sin intentos fallidos
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-sm table-borderless mb-0">
                                    <tbody>
                                        <tr>
                                            <td class="fw-semibold" style="width: 200px;">Creado:</td>
                                            <td>{{ member.createdAt|date('d/m/Y H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Última actualización:</td>
                                            <td>{{ member.updatedAt|date('d/m/Y H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Organización:</td>
                                            <td>{{ member.organization.name }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profiles -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-shield-user-line me-1"></i> Perfiles Asignados
                        <span class="badge badge-soft-primary ms-2">{{ activeProfiles|length }}</span>
                    </h5>
                </div>
                <div class="card-body">
                    {% if activeProfiles is empty %}
                        <div class="alert alert-warning mb-0">
                            <i class="ri-alert-line me-2"></i>
                            Este usuario no tiene perfiles asignados
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Perfil</th>
                                        <th>Descripción</th>
                                        <th>Origen</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for profileData in activeProfiles %}
                                        <tr>
                                            <td class="fw-semibold">{{ profileData.profile.name }}</td>
                                            <td class="text-muted">{{ profileData.profile.description }}</td>
                                            <td>
                                                {% if profileData.source == 'direct' %}
                                                    <span class="profile-badge profile-direct">
                                                        <i class="ri-user-follow-line"></i> Asignación Directa
                                                    </span>
                                                {% else %}
                                                    <span class="profile-badge profile-inherited">
                                                        <i class="ri-group-line"></i> {{ profileData.groupName }}
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if profileData.isExcluded %}
                                                    <span class="profile-badge profile-excluded">
                                                        <i class="ri-close-circle-line"></i> EXCLUIDO
                                                    </span>
                                                {% else %}
                                                    <span class="badge badge-soft-success">
                                                        <i class="ri-checkbox-circle-line"></i> Activo
                                                    </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="alert alert-info mb-0">
                                <strong>Leyenda:</strong>
                                <div class="mt-2">
                                    <span class="profile-badge profile-direct me-2">Asignación Directa</span>
                                    <span class="profile-badge profile-inherited me-2">Heredado de Grupo</span>
                                    <span class="profile-badge profile-excluded">Exclusión Explícita</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Groups -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="ri-group-line me-1"></i> Grupos
                        <span class="badge badge-soft-info ms-2">{{ member.memberGroups|length }}</span>
                    </h5>
                </div>
                <div class="card-body">
                    {% if member.memberGroups is empty %}
                        <div class="alert alert-warning mb-0">
                            <i class="ri-alert-line me-2"></i>
                            Este usuario no pertenece a ningún grupo
                        </div>
                    {% else %}
                        <div class="row">
                            {% for memberGroup in member.memberGroups %}
                                <div class="col-md-6">
                                    <div class="card border shadow-none mb-2">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <div class="avatar-xs">
                                                        <div class="avatar-title bg-info-subtle text-info rounded">
                                                            <i class="ri-group-line"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-1">{{ memberGroup.group.name }}</h6>
                                                    <p class="text-muted mb-0 small">{{ memberGroup.group.description }}</p>
                                                </div>
                                                <div class="flex-shrink-0">
                                                    <span class="badge badge-soft-{{ memberGroup.isActive ? 'success' : 'danger' }}">
                                                        {{ memberGroup.isActive ? 'ACTIVO' : 'INACTIVO' }}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center p-4">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                <div class="mt-4">
                    <h4 class="mb-3">¿Estás seguro?</h4>
                    <p class="text-muted mb-0">¿Deseas eliminar al usuario <strong id="delete-username"></strong>?</p>
                    <p class="text-danger small mb-0">Esta acción cerrará su sesión activa</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <form id="delete-form" method="POST" style="display: inline;">
                    <input type="hidden" name="_token" id="delete-csrf-token">
                    <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Activate Modal -->
<div class="modal fade" id="activateModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Activación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center p-4">
                <lord-icon src="https://cdn.lordicon.com/lupuorrc.json" trigger="loop" colors="primary:#0ab39c,secondary:#405189" style="width:100px;height:100px"></lord-icon>
                <div class="mt-4">
                    <h4 class="mb-3">Activar Usuario</h4>
                    <p class="text-muted mb-0">¿Deseas activar al usuario <strong id="activate-username"></strong>?</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <form id="activate-form" method="POST" style="display: inline;">
                    <input type="hidden" name="_token" id="activate-csrf-token">
                    <button type="submit" class="btn btn-success">Sí, Activar</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block page_js %}
<script src="https://cdn.lordicon.com/lordicon.js"></script>
<script>
    function confirmDelete(userId, username) {
        $('#delete-username').text(username);
        $('#delete-form').attr('action', '{{ path('admin_user_delete', {'id': '__ID__'}) }}'.replace('__ID__', userId));
        
        // CSRF token would be set here from backend
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
        deleteModal.show();
    }

    function confirmActivate(userId, username) {
        $('#activate-username').text(username);
        $('#activate-form').attr('action', '{{ path('admin_user_activate', {'id': '__ID__'}) }}'.replace('__ID__', userId));
        
        // CSRF token would be set here from backend
        const activateModal = new bootstrap.Modal(document.getElementById('activateModal'));
        activateModal.show();
    }

    function unlockUser(userId) {
        if (confirm('¿Deseas restablecer los intentos de login para este usuario?')) {
            // AJAX call to unlock user endpoint
            $.post('{{ path('admin_user_unlock', {'id': '__ID__'}) }}'.replace('__ID__', userId), function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert('Error al desbloquear usuario: ' + response.message);
                }
            }).fail(function() {
                alert('Error de conexión al desbloquear usuario');
            });
        }
    }
</script>
{% endblock %}
