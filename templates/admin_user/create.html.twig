{% extends 'admin_layout.html.twig' %}

{% block title %}Crear Usuario{% endblock %}

{% block page_css %}
    <style>
        .nav-tabs-custom {
            border-bottom: 2px solid #e9ecef;
        }
        .nav-tabs-custom .nav-link {
            border: none;
            color: #6c757d;
            padding: 15px 25px;
            font-weight: 500;
        }
        .nav-tabs-custom .nav-link.active {
            color: #405189;
            border-bottom: 3px solid #405189;
        }
        .tab-icon {
            font-size: 18px;
            margin-right: 8px;
        }
    </style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- Page Title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Crear Nuevo Usuario</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="{{ path('app_dashboard_default') }}">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">Usuarios</a></li>
                        <li class="breadcrumb-item active">Crear</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <!-- Form -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    {% include 'admin_user/user_form.html.twig' with {
                        'form': form,
                        'is_edit': false,
                        'licenseInfo': licenseInfo,
                        'organization': organization
                    } only %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
