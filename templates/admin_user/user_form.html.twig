{# Template unificado para crear y editar usuarios #}
{# Parámetros: form, is_edit (boolean), member (opcional), licenseInfo (opcional para create), organization (opcional para create) #}

<style>
    .nav-tabs-custom {
        border-bottom: 2px solid #e9ecef;
    }
    .nav-tabs-custom .nav-link {
        border: none;
        color: #6c757d;
        padding: 15px 25px;
        font-weight: 500;
    }
    .nav-tabs-custom .nav-link.active {
        color: #405189;
        border-bottom: 3px solid #405189;
    }
    .tab-icon {
        font-size: 18px;
        margin-right: 8px;
    }
</style>

{% if is_edit %}
    <!-- User Info Header for Edit -->
    <div class="alert alert-primary border-0 mb-4">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <img src="{{ asset('assets/images/users/user-dummy-img.jpg') }}" alt="" class="avatar-md rounded-circle">
            </div>
            <div class="flex-grow-1 ms-3">
                <h6 class="mb-1">{{ member.person.name }} {{ member.person.lastName }}</h6>
                <p class="text-muted mb-1 small">
                    <i class="ri-mail-line me-1"></i> {{ member.person.email }}
                    <span class="mx-2">•</span>
                    <i class="ri-user-line me-1"></i> {{ member.username }}
                </p>
                <div>
                    <span class="badge badge-soft-{{ member.state.description == 'ACTIVE' ? 'success' : 'danger' }} badge-sm">
                        {{ member.state.description }}
                    </span>
                    <span class="badge badge-soft-primary badge-sm ms-1">
                        {{ member.role.name }}
                    </span>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <!-- License Warning for Create -->
    {% if licenseInfo.available <= 5 %}
        <div class="alert alert-warning alert-border-left alert-dismissible fade show mb-3" role="alert">
            <i class="ri-alert-line me-3 align-middle fs-16"></i><strong>Atención!</strong> 
            Quedan solo <strong>{{ licenseInfo.available }}</strong> licencias disponibles.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}
{% endif %}

{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true, 'data-controller': 'admin-user--username-generator admin-user--rut-validator admin-user--password-generator admin-user--expiration-date admin-user--location-cascade admin-user--role-toggle'}}) }}
    <!-- Nav Tabs -->
    <ul class="nav nav-tabs nav-tabs-custom mb-4" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#datos-personales" role="tab">
                <i class="ri-user-line tab-icon"></i>
                Datos Personales
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#datos-usuario" role="tab">
                <i class="ri-key-line tab-icon"></i>
                Datos de Usuario
            </a>
        </li>
        {% if not is_edit %}
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#datos-institucion" role="tab">
                    <i class="ri-building-line tab-icon"></i>
                    Datos Institución
                </a>
            </li>
        {% endif %}
    </ul>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Tab 1: Datos Personales -->
        <div class="tab-pane fade show active" id="datos-personales" role="tabpanel">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">{{ form_label(form.documentType) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.documentType, {'attr': {
                        'data-admin-user--rut-validator-target': 'documentType',
                        'data-action': 'change->admin-user--rut-validator#documentTypeChanged'
                    }}) }}
                    {{ form_errors(form.documentType) }}
                </div>

                <div class="col-md-6">
                    <label class="form-label">{{ form_label(form.identification) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.identification, {'attr': {
                        'readonly': is_edit,
                        'data-admin-user--rut-validator-target': 'identification'
                    }}) }}
                    {{ form_errors(form.identification) }}
                    <div data-admin-user--rut-validator-target="message" style="display:none;"></div>
                    <div class="form-text">{{ is_edit ? 'Identificación no puede ser modificada' : 'RUT o identificación única' }}</div>
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.name) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.name, {'attr': {'data-admin-user--username-generator-target': 'name'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.lastName) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.lastName, {'attr': {'data-admin-user--username-generator-target': 'lastName'}}) }}
                    {{ form_errors(form.lastName) }}
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.secondLastName) }}</label>
                    {{ form_widget(form.secondLastName) }}
                    {{ form_errors(form.secondLastName) }}
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.gender) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.gender) }}
                    {{ form_errors(form.gender) }}
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.birthDateAt) }}</label>
                    {{ form_widget(form.birthDateAt) }}
                    {{ form_errors(form.birthDateAt) }}
                </div>

                <div class="col-md-4">
                    <label class="form-label">{{ form_label(form.mobilePhone) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.mobilePhone) }}
                    {{ form_errors(form.mobilePhone) }}
                </div>

                <div class="col-md-6">
                    <label class="form-label">{{ form_label(form.landlinePhone) }}</label>
                    {{ form_widget(form.landlinePhone) }}
                    {{ form_errors(form.landlinePhone) }}
                    <div class="form-text">Teléfono fijo opcional</div>
                </div>

                <div class="col-md-6" data-controller="admin-user--email-validator">
                    <label class="form-label">{{ form_label(form.email) }} <span class="text-danger">*</span></label>
                    {{ form_widget(form.email, {'attr': {'data-admin-user--email-validator-target': 'email'}}) }}
                    {{ form_errors(form.email) }}
                    <div data-admin-user--email-validator-target="message" style="display:none;"></div>
                </div>

                <div class="col-md-6" data-controller="admin-user--email-validator">
                    <label class="form-label">{{ form_label(form.secondEmail) }}</label>
                    {{ form_widget(form.secondEmail, {'attr': {'data-admin-user--email-validator-target': 'email'}}) }}
                    {{ form_errors(form.secondEmail) }}
                    <div data-admin-user--email-validator-target="message" style="display:none;"></div>
                    <div class="form-text">Email secundario opcional</div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="button" class="btn btn-primary" onclick="document.querySelector('[href=\'#datos-usuario\']').click()">
                    Siguiente <i class="ri-arrow-right-line ms-1"></i>
                </button>
            </div>
        </div>

        <!-- Tab 2: Datos de Usuario -->
        <div class="tab-pane fade" id="datos-usuario" role="tabpanel">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">{{ form_label(form.username) }} <span class="text-danger">*</span></label>
                    <div class="input-group">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'data-admin-user--username-generator-target': 'username'}}) }}
                        {% if not is_edit %}
                        <button type="button" class="btn btn-outline-secondary" 
                                data-action="admin-user--username-generator#generate"
                                title="Regenerar username">
                            <i class="ri-refresh-line"></i>
                        </button>
                        {% endif %}
                    </div>
                    {{ form_errors(form.username) }}
                    {{ form_help(form.username) }}
                </div>

                <div class="col-md-6">
                    <label class="form-label">{{ form_label(form.password) }} {% if not is_edit %}<span class="text-danger">*</span>{% endif %}</label>
                    <div class="input-group">
                        {{ form_widget(form.password, {'attr': {
                            'class': 'form-control', 
                            'id': 'password-field',
                            'data-admin-user--password-generator-target': 'password',
                            'readonly': false,
                            'placeholder': is_edit ? 'Dejar vacío para mantener la actual' : 'Clic en el botón para generar automáticamente'
                        }}) }}
                        <button type="button" class="btn btn-outline-primary" 
                                data-action="click->admin-user--password-generator#generatePassword"
                                title="Generar contraseña automática">
                            <i class="ri-key-line"></i>
                        </button>
                    </div>
                    {{ form_errors(form.password) }}
                </div>

                {% if is_edit %}
                    <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.state) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.state, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.state) }}
                    </div>
                {% endif %}

                <div class="col-12 mt-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light border-bottom">
                            <h6 class="mb-0"><i class="ri-shield-user-line me-2 text-primary"></i>Permisos y Restricciones</h6>
                        </div>
                        <div class="card-body">
                            <div class="row g-4">
                                <!-- Fecha de Caducidad -->
                                <div class="col-12">
                                    <div class="border rounded p-3 bg-light">
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="ri-calendar-line fs-20 text-info me-2"></i>
                                            <label class="form-label mb-0 fw-semibold">{{ form_label(form.expirationDateType) }}</label>
                                        </div>
                                        <div class="d-flex gap-4 mb-3">
                                            {% for choice in form.expirationDateType %}
                                                <div class="form-check">
                                                    {{ form_widget(choice, {'attr': {'class': 'form-check-input', 'data-action': 'change->admin-user--expiration-date#toggleDate'}}) }}
                                                    {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        {{ form_errors(form.expirationDateType) }}
                                        
                                        <div id="expiration-date-container" style="display: none;" data-admin-user--expiration-date-target="dateContainer">
                                            <label class="form-label small text-muted mb-2">{{ form_label(form.expirationDate) }}</label>
                                            {{ form_widget(form.expirationDate, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.expirationDate) }}
                                            <div class="form-text mt-1"><i class="ri-information-line"></i> Fecha posterior a hoy</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Permisos de Acceso -->
                                <div class="col-12">
                                    <label class="form-label fw-semibold mb-3">
                                        <i class="ri-lock-unlock-line text-success me-2"></i>Restricciones de Acceso
                                    </label>
                                    <div class="row g-3">
                                        <div class="col-lg-4 col-md-6">
                                            <div class="card border h-100">
                                                <div class="card-body p-3">
                                                    <div class="d-flex align-items-start justify-content-between">
                                                        <div class="flex-grow-1">
                                                            <div class="form-check form-switch">
                                                                {{ form_widget(form.onlyPatientsModule, {'attr': {'class': 'form-check-input', 'role': 'switch', 'id': 'switch-patients-module'}}) }}
                                                                {{ form_label(form.onlyPatientsModule, null, {'label_attr': {'class': 'form-check-label fw-medium', 'for': 'switch-patients-module'}}) }}
                                                            </div>
                                                            <p class="text-muted small mb-0 mt-2">
                                                                <i class="ri-user-heart-line me-1"></i>El usuario solo puede acceder al módulo de pacientes
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-4 col-md-6">
                                            <div class="card border h-100">
                                                <div class="card-body p-3">
                                                    <div class="d-flex align-items-start justify-content-between">
                                                        <div class="flex-grow-1">
                                                            <div class="form-check form-switch">
                                                                {{ form_widget(form.onlyAssignedPatients, {'attr': {'class': 'form-check-input', 'role': 'switch', 'id': 'switch-assigned-patients'}}) }}
                                                                {{ form_label(form.onlyAssignedPatients, null, {'label_attr': {'class': 'form-check-label fw-medium', 'for': 'switch-assigned-patients'}}) }}
                                                            </div>
                                                            <p class="text-muted small mb-0 mt-2">
                                                                <i class="ri-user-follow-line me-1"></i>Limita el acceso solo a pacientes asignados
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-4 col-md-6">
                                            <div class="card border h-100">
                                                <div class="card-body p-3">
                                                    <div class="d-flex align-items-start justify-content-between">
                                                        <div class="flex-grow-1">
                                                            <div class="form-check form-switch">
                                                                {{ form_widget(form.viewCashRegister, {'attr': {'class': 'form-check-input', 'role': 'switch', 'id': 'switch-cash-register'}}) }}
                                                                {{ form_label(form.viewCashRegister, null, {'label_attr': {'class': 'form-check-label fw-medium', 'for': 'switch-cash-register'}}) }}
                                                            </div>
                                                            <p class="text-muted small mb-0 mt-2">
                                                                <i class="ri-money-dollar-circle-line me-1"></i>Permite visualizar información de caja
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="button" class="btn btn-light" onclick="document.querySelector('[href=\'#datos-personales\']').click()">
                    <i class="ri-arrow-left-line me-1"></i> Anterior
                </button>
                {% if is_edit %}
                    <button type="submit" class="btn btn-primary">
                        <i class="ri-save-line me-1"></i> Guardar Cambios
                    </button>
                {% else %}
                    <button type="button" class="btn btn-primary" onclick="document.querySelector('[href=\'#datos-institucion\']').click()">
                        Siguiente <i class="ri-arrow-right-line ms-1"></i>
                    </button>
                {% endif %}
            </div>
        </div>

        {% if not is_edit %}
            <!-- Tab 3: Datos Institución (solo para crear) -->
            <div class="tab-pane fade" id="datos-institucion" role="tabpanel">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.role) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.role, {'attr': {
                            'class': 'form-select',
                            'data-admin-user--role-toggle-target': 'role',
                            'data-action': 'change->admin-user--role-toggle#onRoleChange'
                        }}) }}
                        {{ form_errors(form.role) }}
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.position) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.position) }}
                        {{ form_errors(form.position) }}
                    </div>

                    <div class="col-12 mt-4">
                        <h6 class="mb-3"><i class="ri-map-pin-line me-2 text-primary"></i>Ubicación y Servicios</h6>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">{{ form_label(form.branch) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.branch, {'attr': {
                            'data-admin-user--location-cascade-target': 'branch',
                            'data-action': 'change->admin-user--location-cascade#loadDepartments'
                        }}) }}
                        {{ form_errors(form.branch) }}
                        <div class="form-text">Seleccione la sucursal principal</div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">{{ form_label(form.department) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.department, {'attr': {
                            'data-admin-user--location-cascade-target': 'department',
                            'data-action': 'change->admin-user--location-cascade#loadServices'
                        }}) }}
                        {{ form_errors(form.department) }}
                        <div class="form-text">Depende de la sucursal</div>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">{{ form_label(form.medicalService) }} <span class="text-danger">*</span></label>
                        {{ form_widget(form.medicalService, {'attr': {
                            'data-admin-user--location-cascade-target': 'service'
                        }}) }}
                        {{ form_errors(form.medicalService) }}
                        <div class="form-text">Depende de la unidad</div>
                    </div>

                    <!-- Sección Datos Profesionales - Se oculta/muestra según rol -->
                    <div data-admin-user--role-toggle-target="professionalSection" class="row g-3" style="display: none;">
                        <div class="col-12 mt-4">
                            <h6 class="mb-3"><i class="ri-stethoscope-line me-2 text-info"></i>Datos Profesionales (Opcional para Médicos)</h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">{{ form_label(form.professionalType) }}</label>
                            {{ form_widget(form.professionalType, {'attr': {
                                'data-admin-user--role-toggle-target': 'professionalType'
                            }}) }}
                            {{ form_errors(form.professionalType) }}
                            <div class="form-text">Interno, Externo o Mixto</div>
                        </div>

                        <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.rcm) }}</label>
                        {{ form_widget(form.rcm, {'attr': {
                            'data-admin-user--role-toggle-target': 'rcm'
                        }}) }}
                        {{ form_errors(form.rcm) }}
                        <div class="form-text">Registro Médico</div>
                    </div>

                    <div class="col-md-6" data-controller="admin-user--multi-select-badges" data-admin-user--multi-select-badges-label-value="Especialidad">
                        <label class="form-label">{{ form_label(form.specialties) }}</label>
                        
                        <!-- Badges de selecciones actuales -->
                        <div data-admin-user--multi-select-badges-target="badgeContainer" class="mb-2 d-flex flex-wrap gap-1" style="min-height: 28px;">
                            <small class="text-muted" data-admin-user--multi-select-badges-target="emptyMessage">Ninguna seleccionada</small>
                        </div>
                        
                        {{ form_widget(form.specialties, {'attr': {
                            'class': 'form-select',
                            'multiple': 'multiple',
                            'size': '4',
                            'data-admin-user--role-toggle-target': 'specialties',
                            'data-admin-user--multi-select-badges-target': 'select',
                            'data-action': 'change->admin-user--multi-select-badges#updateBadges'
                        }}) }}
                        {{ form_errors(form.specialties) }}
                        <div class="form-text">Puede seleccionar múltiples. Use Ctrl/Cmd + Click</div>
                    </div>

                    <div class="col-md-6" data-controller="admin-user--multi-select-badges" data-admin-user--multi-select-badges-label-value="Previsión">
                        <label class="form-label">{{ form_label(form.healthInsurances) }}</label>
                        
                        <!-- Badges de selecciones actuales -->
                        <div data-admin-user--multi-select-badges-target="badgeContainer" class="mb-2 d-flex flex-wrap gap-1" style="min-height: 28px;">
                            <small class="text-muted" data-admin-user--multi-select-badges-target="emptyMessage">Ninguna seleccionada</small>
                        </div>
                        
                        {{ form_widget(form.healthInsurances, {'attr': {
                            'class': 'form-select',
                            'multiple': 'multiple',
                            'size': '4',
                            'data-admin-user--role-toggle-target': 'healthInsurances',
                            'data-admin-user--multi-select-badges-target': 'select',
                            'data-action': 'change->admin-user--multi-select-badges#updateBadges'
                        }}) }}
                        {{ form_errors(form.healthInsurances) }}
                        <div class="form-text">Previsiones aceptadas. Use Ctrl/Cmd + Click</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.superintendentRegistry) }}</label>
                        {{ form_widget(form.superintendentRegistry, {'attr': {
                            'data-admin-user--role-toggle-target': 'superintendentRegistry'
                        }}) }}
                        {{ form_errors(form.superintendentRegistry) }}
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">{{ form_label(form.overbookingQuantity) }}</label>
                        {{ form_widget(form.overbookingQuantity, {'attr': {
                            'data-admin-user--role-toggle-target': 'overbookingQuantity'
                        }}) }}
                        {{ form_errors(form.overbookingQuantity) }}
                        <div class="form-text">Cantidad permitida de sobrecupo (0-10)</div>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">{{ form_label(form.observation) }}</label>
                        {{ form_widget(form.observation, {'attr': {
                            'data-admin-user--role-toggle-target': 'observation'
                        }}) }}
                        {{ form_errors(form.observation) }}
                    </div>

                    <div class="col-md-12">
                        <label class="form-label">{{ form_label(form.webObservation) }}</label>
                        {{ form_widget(form.webObservation, {'attr': {
                            'data-admin-user--role-toggle-target': 'webObservation'
                        }}) }}
                        {{ form_errors(form.webObservation) }}
                    </div>

                    <div class="col-12 mt-3">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isEmergencyProfessional, {'attr': {
                                        'class': 'form-check-input',
                                        'role': 'switch',
                                        'data-admin-user--role-toggle-target': 'isEmergencyProfessional'
                                    }}) }}
                                    {{ form_label(form.isEmergencyProfessional, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isIntegrationProfessional, {'attr': {
                                        'class': 'form-check-input',
                                        'role': 'switch',
                                        'data-admin-user--role-toggle-target': 'isIntegrationProfessional'
                                    }}) }}
                                    {{ form_label(form.isIntegrationProfessional, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Fin Sección Datos Profesionales -->

                    <div class="col-md-6">
                        <label class="form-label">Estado Inicial</label>
                        <input type="text" class="form-control" value="Activo" disabled readonly>
                    </div>

                    <div class="col-12">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="mb-2"><i class="ri-shield-check-line me-2 text-success"></i>Permisos y Accesos</h6>
                                <p class="text-muted mb-0">
                                    El usuario tendrá acceso a los módulos según el rol seleccionado.
                                    Los perfiles y grupos específicos pueden ser asignados después de crear el usuario.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="button" class="btn btn-light" onclick="document.querySelector('[href=\'#datos-usuario\']').click()">
                        <i class="ri-arrow-left-line me-1"></i> Anterior
