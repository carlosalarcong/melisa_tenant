<!DOCTYPE html>
<html lang="{{ app.request.locale|default('es') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ 'auth.login'|trans }} - Melisa Medical</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            width: 100%;
            max-width: 400px;
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-header h1 {
            color: #333;
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
        }
        .login-header p {
            color: #666;
            font-size: 0.9rem;
        }
        .tenant-info {
            background: #e3f2fd;
            border: 1px solid #2196f3;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .tenant-info h6 {
            color: #1976d2;
            margin-bottom: 0.5rem;
        }
        .tenant-info .tenant-name {
            font-weight: bold;
            color: #0d47a1;
        }
        .form-floating {
            margin-bottom: 1rem;
        }
        .btn-login {
            width: 100%;
            padding: 0.75rem;
            font-size: 1rem;
            font-weight: 500;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 8px;
            color: white;
            transition: transform 0.2s;
        }
        .btn-login:hover {
            transform: translateY(-2px);
            color: white;
        }
        .alert {
            border-radius: 8px;
            font-size: 0.9rem;
        }
        .password-input-group {
            position: relative;
        }
        .password-toggle {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #6c757d;
            cursor: pointer;
            z-index: 10;
            padding: 5px;
            border-radius: 4px;
            transition: color 0.2s;
        }
        .password-toggle:hover {
            color: #495057;
            background-color: #f8f9fa;
        }
        .password-toggle:focus {
            outline: 2px solid #0d6efd;
            outline-offset: 1px;
        }
        .demo-info {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 1rem;
            margin-top: 1.5rem;
            font-size: 0.85rem;
        }
        .demo-info h6 {
            color: #856404;
            margin-bottom: 0.5rem;
        }
        .demo-info ul {
            margin-bottom: 0;
            padding-left: 1.2rem;
        }
        .tenant-selector {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
        .tenant-selector a {
            color: #0d6efd;
            text-decoration: none;
        }
        .tenant-selector a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Selector de idiomas en la esquina superior derecha -->
            <div class="d-flex justify-content-end mb-3">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                        {% if app.request.locale == 'es' %}
                            üá™üá∏ ES
                        {% elseif app.request.locale == 'en' %}
                            üá∫üá∏ EN
                        {% else %}
                            üåê {{ app.request.locale|upper }}
                        {% endif %}
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'es' %}active{% endif %}" 
                               href="{{ path('app_locale_change', {'locale': 'es'}) }}">
                                üá™üá∏ Espa√±ol
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item {% if app.request.locale == 'en' %}active{% endif %}" 
                               href="{{ path('app_locale_change', {'locale': 'en'}) }}">
                                üá∫üá∏ English
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="login-header">
                <h1>üè• {{ 'auth.login'|trans }}</h1>
                <p>{{ 'auth.system_description'|trans|default('Multi-Tenant Medical Management System') }}</p>
            </div>

            {% if tenant %}
                <div class="tenant-info">
                    <h6>üè¢ {{ 'auth.selected_company'|trans|default('Selected Company') }}</h6>
                    <div class="tenant-name">{{ tenant.name }}</div>
                    <small class="text-muted">{{ 'auth.subdomain'|trans|default('Subdomain') }}: {{ tenant.subdomain }}</small>
                </div>
            {% else %}
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> 
                    {{ tenant_name }}
                </div>
            {% endif %}

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> {{ error }}
                </div>
            {% endif %}

            <form method="post" action="{{ path('app_login') }}">
                {# Campo de usuario - Symfony Security espera '_username' #}
                <div class="form-floating">
                    <input type="text" 
                           class="form-control" 
                           id="username" 
                           name="_username" 
                           placeholder="{{ 'auth.username'|trans }}"
                           value="{{ last_username }}"
                           required
                           autocomplete="username">
                    <label for="username">{{ 'auth.username'|trans }}</label>
                </div>

                {# Campo de contrase√±a - Symfony Security espera '_password' #}
                <div class="form-floating password-input-group">
                    <input type="password" 
                           class="form-control" 
                           id="password" 
                           name="_password" 
                           placeholder="{{ 'auth.password'|trans }}"
                           required
                           autocomplete="current-password">
                    <label for="password">{{ 'auth.password'|trans }}</label>
                    <button type="button" 
                            class="password-toggle" 
                            onclick="togglePassword()"
                            title="{{ 'auth.show_hide_password'|trans|default('Show/Hide password') }}"
                            aria-label="{{ 'auth.show_password'|trans|default('Show password') }}">
                        <svg id="eye-icon" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </button>
                </div>

                {# Checkbox Remember Me #}
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on">
                    <label class="form-check-label" for="remember_me">
                        {{ 'auth.remember_me'|trans }}
                    </label>
                </div>

                {# Token CSRF requerido por Symfony Security #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-login">
                    {{ 'auth.login'|trans }}
                </button>
                
                {# Enlace para recuperar contrase√±a #}
                <div class="text-center mt-3">
                    <a href="{{ path('app_forgot_password_request') }}" class="text-muted" style="font-size: 0.9rem;">
                        ¬øOlvid√≥ su contrase√±a?
                    </a>
                </div>
            </form>

            {% if not tenant %}
                <div class="tenant-selector">
                    <strong>üåê Cambiar Empresa:</strong><br>
                    <small>
                        Para acceder a otra empresa, visite: 
                        <a href="#" onclick="showTenantSelector()">seleccionar empresa</a>
                    </small>
                </div>
            {% endif %}
            <div class="demo-info">
                <h6>üß™ Datos de Prueba:</h6>
                <ul>
                    <li><strong>üè• URLs:</strong> <code>melisalacolina.melisaupgrade.prod:8081</code> | <code>melisahospital.melisaupgrade.prod:8081</code></li>
                    <li><strong>üë§ Usuario:</strong> <code>admin</code>, <code>doctor1</code>, <code>secretaria1</code></li>
                    <li><strong>üîë Contrase√±a:</strong> <code>password</code> (para todos)</li>
                    <li><strong>üè¢ Empresas:</strong> <code>Cl√≠nica La Colina</code>, <code>Hospital Central</code></li>
                </ul>
                <p class="mb-0"><strong>üí° Tip:</strong> El sistema detecta autom√°ticamente la empresa desde la URL.</p>
            </div>
        </div>
    </div>

    <!-- Modal para selector de tenants -->
    <div class="modal fade" id="tenantModal" tabindex="-1" aria-labelledby="tenantModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tenantModalLabel">üè¢ Seleccionar Empresa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Seleccione la empresa a la que desea acceder:</p>
                    <div id="tenantsList" class="list-group">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Funci√≥n para mostrar/ocultar contrase√±a
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eye-icon');
            const toggleButton = document.querySelector('.password-toggle');
            
            if (passwordInput.type === 'password') {
                // Mostrar contrase√±a
                passwordInput.type = 'text';
                toggleButton.setAttribute('aria-label', 'Ocultar contrase√±a');
                toggleButton.setAttribute('title', 'Ocultar contrase√±a');
                
                // Cambiar √≠cono a ojo tachado
                eyeIcon.innerHTML = `
                    <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                    <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                    <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.708zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                `;
            } else {
                // Ocultar contrase√±a
                passwordInput.type = 'password';
                toggleButton.setAttribute('aria-label', 'Mostrar contrase√±a');
                toggleButton.setAttribute('title', 'Mostrar contrase√±a');
                
                // Cambiar √≠cono a ojo normal
                eyeIcon.innerHTML = `
                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                `;
            }
        }

        // Funci√≥n para mostrar el modal de selecci√≥n de tenants
        async function showTenantSelector() {
            const modal = new bootstrap.Modal(document.getElementById('tenantModal'));
            modal.show();
            
            try {
                // TODO: Implementar llamada a API
