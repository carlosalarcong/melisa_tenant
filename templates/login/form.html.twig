                    tenantsList.innerHTML = '<div class="alert alert-warning">No hay empresas disponibles</div>';
                }
            } catch (error) {
                document.getElementById('tenantsList').innerHTML = 
                    '<div class="alert alert-danger">Error cargando empresas</div>';
            }
        }

        // Prevenir env√≠o del formulario al hacer clic en el bot√≥n de mostrar/ocultar
        document.querySelector('.password-toggle').addEventListener('click', function(e) {
            e.preventDefault();
        });

        // Agregar soporte para tecla Enter
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && e.target.tagName === 'INPUT') {
                document.querySelector('form').submit();
            }
        });
    </script>
</body>
</html>