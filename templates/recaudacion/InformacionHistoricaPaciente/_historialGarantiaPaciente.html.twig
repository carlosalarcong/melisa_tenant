    <script type="text/javascript" src="{{ asset('bundles/hermes/js/Agenda/DacionHoras/fnReenviarDte.js') }}"></script>
    <script>
        var idPacientePreSubir = null;
        var archivo;
        var countErrorInt = 0;
        var countError = null;
        var arrStringMensajes = {
            cargando: 'Cargando...',
            eliminando: 'Eliminando...',
            exitoSubido: 'Archivo Guardado Exitosamente.',
            exitoEliminado: 'Archivo Eliminado Exitosamente.',
            mensajeCampoVacio: 'Debe adjuntar un Archivo.',
            mensajeErrorTamano: 'Tamaño No Valido, Valide Archivo.',
            mensajeErrorFormato: 'Formato No Valido, Valide Archivo.',
            mensajeErrorSubida: 'Ocurrio un Error en guardar Archivo, Intente Nuevamente.',
            mensajeErrorEliminado: 'Ocurrio un Error mientras eliminaba Archivo, Intente Nuevamente.',
            mensajeErrorAbrir: 'Ocurrio un Error mientras abría Archivo, Intente Nuevamente.'
        };

        function mostrarMensaje(tipo) {
            if (!countError) {
                $('.mensajeAlerta').hide();
                $('.mensajeAlerta').html('');
            }
            var saltoLinea = '';
            var codeHtml = '';

            switch (tipo) {
                case 'cargando':
                    codeHtml = construyeMensaje('cargando', arrStringMensajes.cargando);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'eliminando':
                    codeHtml = construyeMensaje('cargando', arrStringMensajes.eliminando);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'exitoSubido':
                    codeHtml = construyeMensaje('exito', arrStringMensajes.exitoSubido);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'exitoEliminado':
                    codeHtml = construyeMensaje('exito', arrStringMensajes.exitoEliminado);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'mensajeCampoVacio':
                    codeHtml = construyeMensaje('error', arrStringMensajes.mensajeCampoVacio);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'mensajeErrorFormato':
                    codeHtml = construyeMensaje('error', arrStringMensajes.mensajeErrorFormato)
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = arrStringMensajes.mensajeErrorFormato;
                    break;
                case 'mensajeErrorTamano':
                    if (countError) {
                        var saltoLinea = mensajeErrorFormato + "<div class='clearfix'></div>";
                    }
                    codeHtml = construyeMensaje('error', saltoLinea + arrStringMensajes.mensajeErrorTamano);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'errorSubida':
                    codeHtml = construyeMensaje('error', arrStringMensajes.errorSubida);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'errorEliminado':
                    codeHtml = construyeMensaje('error', arrStringMensajes.errorEliminado);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;
                case 'mensajeErrorAbrir':
                    codeHtml = construyeMensaje('error', arrStringMensajes.mensajeErrorAbrir);
                    $('#mensaje' + idPacientePreSubir).html(codeHtml).show();
                    countError = null;
                    break;

            }
        }

        function construyeMensaje(tipo, mensaje) {
            switch (tipo) {
                case 'cargando':
                    return "<i class ='icon-spinner icon-spin blue icon-large'> </i><span class='blue'> " + mensaje + "</span>";
                case 'exito':
                    return "<i class='icon-ok green icon-large'></i> <span class='green'> " + mensaje + "</span>";
                case 'error':
                    return "<i class='icon-info-sign red icon-large''> </i><span class='red'> " + mensaje + "</span>";
            }
        }

        $(document).ready(function () {
            {% if app.user.tienePerfil('CAJA_ANULAR_PAGO') %}
            $(".anular").on('click', function (e) {
                $(".modalAnular").html('');
                e.preventDefault();
                var href = $(this).attr('href');
                var ruta = Routing.generate("Caja_Pregunta_Pago_esImed");
                var data = {paciente: $(this).data('id')};
                $.ajax({
                    type: 'get',
                    url: ruta,
                    data: data,
                    success: function (datar) {
                        if (datar == 0) {
                            var tipoMensaje = "el Pago seleccionado";
                            var tipoboton = "Anular Pago";
                            console.log(datar);
                            $(this).closest('.modal').modal('hide');
                            anulacionPago(href, tipoMensaje, tipoboton);
                        } else {
                            var tipoMensaje = "un Pago que registra un Bono Electrónico IMED, esto anulará a su vez el Bono Generado";
                            var tipoboton = "Anular Pago y Bono Electrónico";
                            console.log(datar);
                            $(this).closest('.modal').modal('hide');
                            anulacionPago(href, tipoMensaje, tipoboton);
                        }
                    }
                });
            });
            {% endif %}

        });

        function anulacionPago(href, tipomensaje, tipoboton) {
            bootbox.dialog(
                "<div class='alert alert-block alert-danger loadAnulaPago'>" +
                "<br><strong>Anulará " + tipomensaje + "</strong>,<br>¿Está seguro de querer continuar?." +
                "</div>"
                , [
                    {
                        "label": "Cancelar",
                        "class": "btn btn-mini",
                        "callback": function () {
                        }
                    },
                    {
                        "label": tipoboton,
                        "class": "btn btn-mini btn-danger",
                        "callback": function () {
                            $(this).closest('.modal').modal('hide');
                            bootbox.dialog(
                                "<div class='alert alert-block alert-success loadAnulaPago'>" +
                                "<div id='cargando'><br><br><br><center><h3><i class='icon-spinner icon-spin icon-large icon-4x'></i><div class='clearfix'></div><br><strong> Eliminando</strong></h3></center></div>" +
                                "</div>");

                            $.post(href, function (response) {
                                var response = $.parseJSON(response);
                                if (response.done == 1) {
                                    $(this).closest('.modal').modal('hide');
                                    var div = "<div class='alert alert-block alert-success'><p><strong><i class='icon-ok'></i> Anulado Correctamente</strong></p>";
                                    creaListaHistorica();
                                } else {
                                    $(this).closest('.modal').modal('hide');
                                    var div = "<div class='alert alert-block alert-danger'><p><strong><i class='icon-ok'></i> Se produjo un Error en Anulación</strong></p>";
                                    creaListaHistorica();
                                }
                                $(this).closest('.modal').modal('hide');
                                bootbox.dialog(div, [
                                    {
                                        "label": "Ok",
                                        "class": "btn btn-mini btn-info",
                                        "callback": function () {
                                            if (response == 1) {
                                                $(".modalAnular").html('');
                                                $(".widget-box").removeClass("collapsed");
                                                $('.icon-list-historico').attr('class', function () {
                                                    return $(this).attr('class').replace('icon-chevron-down', 'icon-chevron-up');
                                                }).delay(500);
                                                bootbox.hideAll();
                                            } else {
                                                $(".modalAnular").html('');
                                                bootbox.hideAll();
                                            }
                                        }
                                    }
                                ]);
                            });
                        }
                    }
                ]);
        }


