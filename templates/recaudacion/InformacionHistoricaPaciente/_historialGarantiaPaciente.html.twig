        function SubirArchivoServidor(idPaciente) {
            idPacientePreSubir = idPaciente;
            $('#rebsol_hermesbundle_AdjuntoType_idPaciente').val(idPaciente);
            $('#rebsol_hermesbundle_AdjuntoType_archivo').submit();
        }

        function validaArchivo() {
            if ($('#AdjuntoInferiorSubir' + idPacientePreSubir).is(':visible')) {
                if ($('#rebsol_hermesbundle_AdjuntoType_archivo').val() == null || $('#rebsol_hermesbundle_AdjuntoType_archivo').val() == "") {
                    mostrarMensaje('mensajeCampoVacio');
                    countErrorInt = countErrorInt + 1;
                } else {
                    var file = $('#rebsol_hermesbundle_AdjuntoType_archivo')[0].files[0];

                    if (comprueba_extension($('#rebsol_hermesbundle_AdjuntoType_archivo').val()) == false) {
                        mostrarMensaje('mensajeErrorFormato');
                        countErrorInt = countErrorInt + 1;
                    }

                    if (file.size > 400000000) {
                        mostrarMensaje('mensajeErrorTamaño');
                        countErrorInt = countErrorInt + 1;
                    }
                }

                if (countErrorInt == 0) {
                    return true;
                } else {
                    return false;
                }
            } else {
                return false;
            }

        }

        function comprueba_extension(archivo) {
            extensiones_permitidas = new Array(".doc", ".pdf");
            extension = (archivo.substring(archivo.lastIndexOf("."))).toLowerCase();
            //compruebo si la extensión está entre las permitidas
            permitida = false;
            for (var i = 0; i < extensiones_permitidas.length; i++) {
                if (extensiones_permitidas[i] == extension) {
                    permitida = true;
                    break;
                }
            }
            return permitida;
        }

        $('#form').on('submit', (function (event) {
            if (validaArchivo() == false) {
                countErrorInt = 0;
                return false;
            }
            event.stopPropagation();
            event.preventDefault();
            $('#AdjuntoInferiorSubir' + idPacientePreSubir).children().attr('disabled', true);
            $('#table_report_history_paginate').children().find('li').hide();
            $(".GrupoBotonesInferiorSubir").hide();
            mostrarMensaje('cargando');
            formData = new FormData();
            formData.append("idPaciente", $(form).find('#rebsol_hermesbundle_AdjuntoType_idPaciente').val());
            formData.append("archivo", $(form).find('#rebsol_hermesbundle_AdjuntoType_archivo')[0].files[0]);

            $.ajax({
                url: $('#form').attr('action'),
                type: "POST",
                data: formData,
                async: true,
                contentType: false,
                cache: false,
                processData: false,
                success: function (data) {
                    var respuesta = $.parseJSON(data);
                    if (respuesta.error == 0) {
                        BotonesPostSubirArchivo();
                        mostrarMensaje('exitoSubido');
                        setTimeout(function () {
                            $('#AdjuntoInferiorSubir' + idPacientePreSubir).children().attr('disabled', false);
                            $('#table_report_history_paginate').children().find('li').show();
                            CancelarAdjunto(idPacientePreSubir)
                        }, 2000);
                    } else {
                        $('#AdjuntoInferiorSubir' + idPacientePreSubir).children().attr('disabled', false);
                        $('#table_report_history_paginate').children().find('li').show();
                        mostrarMensaje('errorSubida');
                    }
                    $('#rebsol_hermesbundle_AdjuntoType_idPaciente, #rebsol_hermesbundle_AdjuntoType_archivo').val('');
                }
            });
        }));

        function EliminarAdjunto(idPaciente) {
            bootbox.dialog(
                "<div class='alert alert-block alert-danger loadAnulaPago'>" +
                "<strong>Eliminará el Archivo Actual, </strong>,<br>¿Está seguro?." +
                "</div>"
                , [
                    {
                        "label": "Cancelar",
                        "class": "btn btn-mini",
                        "callback": function () {
                        }
                    },
                    {
                        "label": "Aceptar",
                        "class": "btn btn-mini btn-danger",
                        "callback": function () {
                            idPacientePreSubir = idPaciente;
                            $('#AdjuntoInferiorAbrir' + idPacientePreSubir).children().attr('disabled', true);
                            $('#table_report_history_paginate').children().find('li').hide();
                            mostrarMensaje('eliminando');
                            var ruta = Routing.generate("Caja_PostPago_EliminarPDF");
                            var data = {idPaciente: idPacientePreSubir};
                            $.ajax({
                                type: 'POST',
                                url: ruta,
                                data: data,
                                success: function (data) {
                                    var respuesta = $.parseJSON(data);
                                    if (respuesta.error == 0) {
                                        BotonesPostEliminarArchivo();
                                        mostrarMensaje('exitoEliminado');
                                        $('#rebsol_hermesbundle_AdjuntoType_idPaciente, #rebsol_hermesbundle_AdjuntoType_archivo').val('');
                                        setTimeout(function () {
                                            $('#AdjuntoInferiorAbrir' + idPacientePreSubir).children().attr('disabled', false);
                                            $('#table_report_history_paginate').children().find('li').show();
                                            CancelarAdjunto(idPacientePreSubir)
                                        }, 2000);
                                    } else {
                                        $('#AdjuntoInferiorAbrir' + idPacientePreSubir).children().attr('disabled', false);
                                        $('#table_report_history_paginate').children().find('li').show();
                                        mostrarMensaje('errorEliminado');
                                    }
                                }
                            });
                        }
                    }
                ]);
        }

        function AbrirAdjunto(idPaciente) {
            idPacientePreSubir = idPaciente;
            mostrarMensaje('cargando');
            var ruta = Routing.generate("Caja_PostPago_AbrirPDF");
            var data = {idPaciente: idPacientePreSubir};
            $.ajax({
                type: 'GET',
                url: ruta,
                data: data,
                success: function (data) {
                    var respuesta = $.parseJSON(data);
                    if (respuesta.error == 0) {
                        window.open(respuesta.url, '_blank');
                        $('.mensajeAlerta').hide();
                        $('.mensajeAlerta').html('');
                    } else {
                        mostrarMensaje('errorAbrir');
                    }
                }
            });
        }

        function BotonesPostSubirArchivo() {
            $('#botonSubir' + idPacientePreSubir).attr('onclick', null).removeClass('btn-success').addClass('btn-ligth');
            $('#botonAbrir' + idPacientePreSubir).attr('onclick', 'javascript:AbrirArchivo(' + idPacientePreSubir + ')').removeClass('btn-ligth').addClass('btn-info');
        }

        function BotonesPostEliminarArchivo() {
            $('#botonSubir' + idPacientePreSubir).attr('onclick', 'javascript:SubirArchivo(' + idPacientePreSubir + ')').removeClass('btn-ligth').addClass('btn-success');
            $('#botonAbrir' + idPacientePreSubir).attr('onclick', null).removeClass('btn-info').addClass('btn-ligth');
        }

    </script>
