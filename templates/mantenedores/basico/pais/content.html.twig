                                                {# BOT√ìN EDITAR #}
                                                <button type="button" 
                                                        class="btn btn-outline-primary btn-sm" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#paisModal" 
                                                        data-action="edit" 
                                                        data-id="{{ pais.idPais }}"
                                                        title="Editar {{ pais.nombrePais }}">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                
                                                {# BOT√ìN ELIMINAR #}
