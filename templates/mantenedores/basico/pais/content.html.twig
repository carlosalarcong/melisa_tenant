<script>
/**
 * JAVASCRIPT PARA MANTENEDOR DE PA√çSES
 * ===================================
 * 
 * Este script maneja las interacciones espec√≠ficas del mantenedor de pa√≠ses.
 * Funciona en conjunto con el sistema AJAX global definido en mantenedores/index.html.twig
 * 
 * FUNCIONALIDADES:
 * - Inicializaci√≥n del modal para crear/editar
 * - Validaci√≥n de formularios
 * - Env√≠o de datos via AJAX
 * - Confirmaciones de eliminaci√≥n
 * - Actualizaci√≥n din√°mica de la interfaz
 * 
 * PARA ADAPTAR A OTROS MANTENEDORES:
 * - Cambia 'pais' por el nombre de tu entidad
 * - Ajusta los campos del formulario
 * - Modifica las validaciones seg√∫n tus reglas de negocio
 * - Actualiza los mensajes y endpoints
 */

document.addEventListener('DOMContentLoaded', function() {
    // ==========================================
    // CONFIGURACI√ìN BASE
    // ==========================================
    const BASE_URL = window.location.origin;
    const API_BASE = BASE_URL + '/mantenedores/basico/pais';
    
    // ==========================================
    // ELEMENTOS DEL DOM
    // ==========================================
    const paisModal = document.getElementById('paisModal');
    const paisForm = document.getElementById('paisForm');
    const paisIdField = document.getElementById('paisId');
    const nombrePaisField = document.getElementById('nombrePais');
    const nombreGentilicioField = document.getElementById('nombreGentilicio');
    const activoField = document.getElementById('activo');
    const modalTitle = document.getElementById('paisModalLabel');
    
    // ==========================================
    // CONFIGURACI√ìN DEL MODAL
    // ==========================================
    if (paisModal) {
        paisModal.addEventListener('show.bs.modal', function(event) {
            const button = event.relatedTarget;
            const action = button.getAttribute('data-action');
            const paisId = button.getAttribute('data-id');
            
            console.log(`üìù Configurando modal para acci√≥n: ${action}`, { paisId });
            
            // Resetear formulario
            resetFormulario();
            
            if (action === 'create') {
                configurarModalCrear();
            } else if (action === 'edit' && paisId) {
                configurarModalEditar(paisId);
            }
        });
        
        // Limpiar formulario al cerrar modal
        paisModal.addEventListener('hidden.bs.modal', function() {
            resetFormulario();
        });
    }
    
    // ==========================================
    // MANEJO DEL FORMULARIO
    // ==========================================
    if (paisForm) {
        paisForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validar formulario
            if (!validarFormulario()) {
                console.log('‚ùå Formulario no v√°lido');
                return;
            }
            
            const paisId = paisIdField.value;
            const esEdicion = paisId && paisId !== '';
            
            console.log(`üíæ Enviando formulario...`, { esEdicion, paisId });
            
            // Enviar datos
            if (esEdicion) {
                actualizarPais(paisId);
            } else {
                crearPais();
            }
        });
    }
    
    // ==========================================
    // MANEJO DE ELIMINACIONES
    // ==========================================
    document.addEventListener('click', function(e) {
        if (e.target.matches('[data-action="delete"], [data-action="delete"] *')) {
            e.preventDefault();
            
            const button = e.target.closest('[data-action="delete"]');
            const paisId = button.getAttribute('data-id');
            const paisNombre = button.getAttribute('data-name');
            
            console.log(`üóëÔ∏è Solicitud de eliminaci√≥n`, { paisId, paisNombre });
            
            confirmarEliminacion(paisId, paisNombre);
        }
    });
    
    // ==========================================
    // FUNCIONES DE CONFIGURACI√ìN
    // ==========================================
    
    /**
     * Configura el modal para crear nuevo pa√≠s
     */
    function configurarModalCrear() {
        modalTitle.innerHTML = '<i class="fas fa-plus me-2"></i>Nuevo Pa√≠s';
        paisIdField.value = '';
        
        // Valores por defecto
        activoField.checked = true;
    }
    
    /**
     * Configura el modal para editar pa√≠s existente
     */
    function configurarModalEditar(paisId) {
        modalTitle.innerHTML = '<i class="fas fa-edit me-2"></i>Editar Pa√≠s';
        paisIdField.value = paisId;
        
        // Mostrar indicador de carga
        const originalHtml = modalTitle.innerHTML;
        modalTitle.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Cargando datos...';
        
        // Cargar datos del pa√≠s
        fetch(`${API_BASE}/${paisId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success && data.data) {
                const pais = data.data;
                
                nombrePaisField.value = pais.nombrePais || '';
                nombreGentilicioField.value = pais.nombreGentilicio || '';
                activoField.checked = pais.activo || false;
                
                // Restaurar t√≠tulo del modal
                modalTitle.innerHTML = '<i class="fas fa-edit me-2"></i>Editar Pa√≠s';
            } else {
                modalTitle.innerHTML = originalHtml;
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.error || 'No se pudieron cargar los datos del pa√≠s'
                });
            }
        })
        .catch(error => {
            console.error('Error de conexi√≥n:', error);
            modalTitle.innerHTML = originalHtml;
            Swal.fire({
                icon: 'error',
                title: 'Error de conexi√≥n',
                text: 'No se pudo conectar con el servidor: ' + error.message
            });
        });
    }
    
    // ==========================================
    // FUNCIONES DE VALIDACI√ìN
    // ==========================================
    
    /**
     * Valida el formulario completo
     */
    function validarFormulario() {
        let esValido = true;
        
        // Limpiar validaciones anteriores
        paisForm.classList.remove('was-validated');
        
        // Validar nombre del pa√≠s
        if (!nombrePaisField.value.trim()) {
            marcarCampoInvalido(nombrePaisField, 'El nombre del pa√≠s es obligatorio');
            esValido = false;
        } else if (nombrePaisField.value.trim().length < 2) {
            marcarCampoInvalido(nombrePaisField, 'El nombre debe tener al menos 2 caracteres');
            esValido = false;
        } else {
            marcarCampoValido(nombrePaisField);
        }
        
        // Validar gentilicio
        if (!nombreGentilicioField.value.trim()) {
            marcarCampoInvalido(nombreGentilicioField, 'El gentilicio es obligatorio');
            esValido = false;
        } else if (nombreGentilicioField.value.trim().length < 2) {
            marcarCampoInvalido(nombreGentilicioField, 'El gentilicio debe tener al menos 2 caracteres');
            esValido = false;
        } else {
            marcarCampoValido(nombreGentilicioField);
        }
        
        // Activar validaci√≥n visual de Bootstrap
        paisForm.classList.add('was-validated');
        
        return esValido;
    }
    
    /**
     * Marca un campo como inv√°lido
     */
    function marcarCampoInvalido(campo, mensaje) {
        campo.classList.add('is-invalid');
        campo.classList.remove('is-valid');
        
        const feedback = campo.parentNode.querySelector('.invalid-feedback');
        if (feedback) {
            feedback.textContent = mensaje;
        }
    }
    
    /**
     * Marca un campo como v√°lido
     */
    function marcarCampoValido(campo) {
        campo.classList.add('is-valid');
        campo.classList.remove('is-invalid');
    }
    
    // ==========================================
    // FUNCIONES DE DATOS
    // ==========================================
    
    /**
     * Crea un nuevo pa√≠s
     */
    function crearPais() {
        const datos = recopilarDatosFormulario();
        
        fetch(API_BASE, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify(datos)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: '¬°√âxito!',
                    text: data.message || 'Pa√≠s creado exitosamente',
                    timer: 2000,
                    showConfirmButton: false
                });
                
                cerrarModal();
                recargarContenido();
            } else {
                mostrarErrorFormulario(data.error);
            }
        })
        .catch(error => {
            console.error('Error de conexi√≥n:', error);
            mostrarErrorConexion();
        });
    }
    
    /**
     * Actualiza un pa√≠s existente
     */
    function actualizarPais(paisId) {
        const datos = recopilarDatosFormulario();
        
        console.log(`üì§ Enviando datos para actualizar pa√≠s ${paisId}:`, datos);
        
        fetch(`${API_BASE}/${paisId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify(datos)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('üì° Respuesta del servidor (actualizar):', data);
            
            if (data.success) {
                console.log('‚úÖ Pa√≠s actualizado exitosamente');
                
                Swal.fire({
                    icon: 'success',
                    title: '¬°√âxito!',
                    text: data.message || 'Pa√≠s actualizado exitosamente',
                    timer: 2000,
                    showConfirmButton: false
                });
                
                cerrarModal();
                recargarContenido();
            } else {
                console.error('‚ùå Error al actualizar pa√≠s:', data.error);
                mostrarErrorFormulario(data.error);
            }
        })
        .catch(error => {
            console.error('‚ùå Error de conexi√≥n:', error);
            mostrarErrorConexion();
        });
    }
    
    /**
     * Confirma y ejecuta eliminaci√≥n de pa√≠s
     */
    function confirmarEliminacion(paisId, paisNombre) {
        Swal.fire({
            title: '¬øEst√° seguro?',
            text: `¬øRealmente desea eliminar el pa√≠s "${paisNombre}"? Esta acci√≥n no se puede deshacer.`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'S√≠, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
