                                                        title="Eliminar {{ pais.nombrePais }}">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# INFORMACI√ìN ADICIONAL DE LA TABLA #}
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-list me-1"></i>
                            Mostrando {{ paises|length }} {{ mantenedor_config.entity_name_plural|lower|default('pa√≠ses') }}
                        </small>
                        
                        {# ESPACIO PARA PAGINACI√ìN (FUTURO) #}
                        <div class="d-flex">
                            {# Aqu√≠ se puede agregar paginaci√≥n en el futuro #}
                        </div>
