        console.log(`üóëÔ∏è Eliminando pa√≠s ID: ${paisId}`);
        
        fetch(`${API_BASE}/${paisId}`, {
            method: 'DELETE',
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('üì° Respuesta del servidor (eliminar):', data);
            
            if (data.success) {
                console.log('‚úÖ Pa√≠s eliminado exitosamente');
                
                Swal.fire({
                    icon: 'success',
                    title: '¬°Eliminado!',
                    text: data.message || 'Pa√≠s eliminado exitosamente',
                    timer: 2000,
                    showConfirmButton: false
                });
                
                recargarContenido();
            } else {
                console.error('‚ùå Error al eliminar pa√≠s:', data.error);
                
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.error || 'No se pudo eliminar el pa√≠s'
                });
            }
        })
        .catch(error => {
            console.error('‚ùå Error de conexi√≥n:', error);
            mostrarErrorConexion();
        });
    }
    
